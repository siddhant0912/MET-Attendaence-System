<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.metattendanceapp.teacherlogin"
    android:background="@drawable/background">

    <include

        android:id="@+id/ftoolbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="8dp"
        />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"

        android:layout_marginStart="37dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:text="Welcome:id"
        android:textColor="#fff"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        tools:layout_editor_absoluteX="120dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="149dp"
            android:background="@drawable/selector"
            android:onClick="takeAttendanceButton"
            android:text="Take attendance"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.364"
            tools:layout_editor_absoluteX="8dp" />


        <Button
            android:id="@+id/button13"
            android:layout_width="375dp"
            android:layout_height="54dp"
            android:layout_above="@+id/button6"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:onClick="uploadNotesAc"
            android:layout_marginTop="181dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/selector"
            android:padding="10dp"
            android:text="Upload Notes" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="302dp"
            android:layout_marginBottom="84dp"
            android:height="40dp"
            android:background="@drawable/selector"
            android:onClick="previous_records"
            android:padding="10dp"
            android:text="previous records"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.626"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/selector"
            android:onClick="logoutTeacher"
            android:padding="10dp"
            android:text="Logout"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.626"
            tools:layout_editor_absoluteX="8dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="300dp"
            android:entries="@array/classes"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.161"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:layout_width="236dp"
            android:layout_height="41dp"
            android:layout_above="@+id/spinner2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="70dp"
            android:text="Select Your Class"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
